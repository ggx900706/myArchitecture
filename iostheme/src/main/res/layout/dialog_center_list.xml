<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_corner_card"
        android:orientation="vertical">

        <TextView
            android:id="@+id/centerDialog_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="4dp"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/centerDialog_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/color_sub_gray"
            android:textSize="16sp" />

        <ScrollView
            android:id="@+id/centerDialog_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/centerDialog_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

    <com.ggx.iostheme.button.IOSButton
        android:id="@+id/centerDialog_centerBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_white_corner_card"
        android:gravity="center"
        android:text="取消" />

</LinearLayout>